{
  "name": "html-bundle-minifier",
  "version": "4.0.1",
  "description": "A powerful and simple HTML bundle minifier that combines and minifies HTML, CSS, and JavaScript files into a single optimized HTML file.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "html-bundle-minifier": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/bin/cli.ts",
    "start": "node dist/bin/cli.js",
    "test": "html-bundle-minifier -i ../test/src/index.html -o ../test/src/index.min.html -g ../test/config.json"
  },
  "keywords": [
    "html",
    "minifier",
    "bundle",
    "minification",
    "terser"
  ],
  "author": "Spark4444",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Spark4444/HTMLBundleMinifier"
  },
  "readme": "README.md",
  "files": [
    "dist/",
    "../README.md"
  ],
  "dependencies": {
    "convert-path-to-absolute": "^1.0.2",
    "css-selector-parser": "^3.1.3",
    "html-minifier-terser": "^7.2.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "web-file-fetcher": "^1.1.2"
  },
  "devDependencies": {
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.10",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  }
}
